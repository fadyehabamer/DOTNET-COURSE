 @model IEnumerable<Eticket.Models.Actor>
 <style>
    .celebrity-content .title,
    .celebrity-content .title a{
       display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
        .celebrity-content p{
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
<!-- =============== START OF PAGE HEADER =============== -->
<section class="page-header overlay-gradient" style="background: url(~/images/posters/movie-collection.jpg);">
    <div class="container">
        <div class="inner">
            <h2 class="title">Actors </h2>
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li>Actors</li>
            </ol>
        </div>
    </div>
</section>
<!-- =============== END OF PAGE HEADER =============== -->
<!-- =============== START OF MAIN =============== -->
<main class="ptb100">
    <div class="container">


        <!-- Start of Celebrities Grid -->
        <div class="row">
            @foreach (var actor in Model)
            {
               
                <!-- Celebrity Grid Item -->
                 <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="celebrity-grid-1">
                        <div class="celeb-container">

                            <!-- Celebrity Image -->
                            <div class="celebrity-image">
                                <a href="/actor/details/@actor.Id">
                                    <img src="~/images/cast/@actor.ProfilePicture" alt="">
                                </a>
                            </div>

                            <!-- Celebrity Content -->
                            <div class="celebrity-content">
                                <div class="inner">
                                    <h3 class="title">
                                        <a href="/actor/details/@actor.Id">
                                            @actor.FirstName @actor.LastName
                                        </a>
                                    </h3>

                                    <p>
                                        @actor.Bio
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>
                </div> 
            }
        </div>
        <!-- End of Celebrities Grid -->


    </div>
</main>
<!-- =============== END OF MAIN =============== -->