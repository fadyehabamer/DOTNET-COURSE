<a href="/employee/create" class="w-100 btn btn-primary mb-3">Create New Employee </a>
<a href="/employee/getusername" class="w-100 btn btn-primary mb-3">Add Username </a>

<h1>Employee List</h1>
<h3>
    All Employees Count: @ViewData["EmpCount"]
</h3>
<span> @ViewData["Message"]</span> : <span> @ViewBag.MessageTwo</span>

@* <h5> Hi , <span class="text-primary"> @ViewBag["Name"]  </span> </h5> *@
<h5> Hi , <span class="text-primary"> @TempData["Name"] - temp data </span> </h5>
<h5> Hi , <span class="text-primary"> @ViewData["CookieName"] - cookie  </span> </h5>

<h5> @TempData["Message"] - tempdata </h5>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Phone</th>
                <th scope="col">Email</th>
                <th scope="col">Address</th>
                <th scope="col">Department</th>
                <th scope="col">Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Department.Name</td>
                    <td>
                        <a class="btn btn-warning" href="/employee/edit/@item.Id">Edit</a>
                        <a class="btn btn-danger" href="/employee/delete/@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>