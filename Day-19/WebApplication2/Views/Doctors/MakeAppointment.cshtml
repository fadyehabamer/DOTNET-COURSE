    <div class="page-header-content">
        <div class="container">
            <div class="page-header-content-inner">
                <div class="page-title">
                    <h2>Make Appointment</h2>
                </div>
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a></li>
                    <li class="active">Make Appointment</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- ==========Page Header Section Ends Here========== -->

<!-- ==========Contact Section Start Here========== -->
<section class="contact-us padding-tb">
    <div class="container">
        <div class="section-wrapper">
            <div class="row">
                <div class="col-lg-6 col-12">
                    <div class="contact-info">
                        <h3>Make Appointment</h3>
                        <ul>
                            <li>
                                <h6>Office Address:</h6>
                                <p>
                                    Suite 02, Level 12, Sahera Tropical Center 218 New Elephant Road, Dhaka - 1205
                                </p>
                            </li>
                            <li>
                                <h6>Phone Number:</h6>
                                <p>+8801678170593, 01919-264687</p>
                                <p>02-9611936</p>
                            </li>
                            <li>
                                <h6>Email Address:</h6>
                                <a href="#">support@LabArtisan</a>
                            </li>
                           
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-12">
                    <div class="here-form">
                        <h3>We Love To Hear From You</h3>


                        <form asp-action="MakeAppointment" method="post">
                            <input type="hidden" asp-for="DoctorId" />
                            <div>
                                <label asp-for="PatientName"></label>
                                <input asp-for="PatientName" required />
                                <span asp-validation-for="PatientName"></span>
                            </div>
                            <div>
                                <label asp-for="Date"></label>
                                <input asp-for="Date" type="date" value="2000-11-11" required />
                                <span asp-validation-for="Date"></span>
                            </div>

                            <div>
                                <label asp-for="Time"></label>
                                <input asp-for="Time" type="time" value="11:11" required/>
                                <span asp-validation-for="Time"></span>
                            </div>

                            <button type="submit" class="btn btn-primary">Make Appointment</button>
                        </form>






                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Contact Section Ends Here========== -->
